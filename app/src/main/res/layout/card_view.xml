<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_drawer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myrect"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/edit_text_style"

            android:padding="12dp">

            <ImageView
                android:id="@+id/imageFavourites"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp" />

            <TextView
                android:id="@+id/name_note_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="26dp"
                android:layout_toStartOf="@+id/imageFavourites"
                android:ellipsize="end"
                android:maxLines="1"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="1"
                android:singleLine="true"
                android:text="@string/note1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_note_3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:text="TextView"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_f_main"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/time_3"

                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="8dp"
                android:elevation="10dp"
                android:src="@drawable/baseline_folder_black_48" />

            <TextView
                android:id="@+id/textViewFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_3"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/image_f_main"
                android:text="TextView"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textListTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/textViewFolder"
                android:textAlignment="viewEnd"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>