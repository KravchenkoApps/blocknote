<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. //////-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>



    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/browser_actions_bg_grey</item>

        <item name="android:itemBackground">@color/ThemeDark_spinner_color</item>
        <item name="android:colorBackground" >@color/ThemeDark_fon</item>
        <item name="android:colorBackgroundFloating" >@color/ThemeDark_fon</item>
        <item name="android:colorBackgroundCacheHint" >@color/ThemeDark_fon</item>
        <item name="android:windowBackground" >@color/ThemeDark_fon</item>
        <item name="android:windowFullscreen" >true</item>
        <item name="android:windowIsFloating" >@color/ThemeDark_fon</item>
        <item name="android:color" >@color/ThemeDark_fon</item>
        <item name="android:fillColor" >@color/ThemeDark_fon</item>
        <item name="android:backgroundTintMode" >src_in</item>


    </style>


    <style name="AppThemeDark_Pref" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/browser_actions_bg_grey</item>
        <item name="android:background">@color/ThemeDark_fon</item>




    </style>

    <style name="AppThemeDark_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ThemeDark_text_color</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>


   <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
